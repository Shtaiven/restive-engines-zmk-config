//--------------------------------------------------------------------------------------------------

    conditional_layers {
        compatible = "zmk,conditional-layers";

        condition_set {
            if-layers = <NAV SYM>;
            then-layer = <SET>;
        };

        condition_set_game {
            if-layers = <GAME SYM>;
            then-layer = <SET>;
        };
    };
