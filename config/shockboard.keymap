// Required to be defined before mouse keys import
#define ZMK_MOUSE_DEFAULT_MOVE_VAL 1500
#define ZMK_MOUSE_DEFAULT_SCRL_VAL 20

#include <behaviors/mouse_keys.dtsi>
#include <behaviors.dtsi>
